<h1>Les vans</h1>

<div class="container py-5">
  <div class="row">
    <% @vans.each do |van| %>
      <div class="col-12 col-lg-4">
        <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= van.van_url %>)">
          <%= link_to van.description, van_path(van) %>
          <% if van.user == current_user %>
            <%= link_to "+", van_path(van), method: :delete, data: {confirm: "Are you sure"}, class: "card-remove-link" %>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['pk.eyJ1IjoieWFzbWluZWIiLCJhIjoiY2t3ZXlobDhoMDlqZzJvbXUycHFlZ2VyNiJ9.lkpsStvtftVUWbOjM3FUyg'] %>"></div>
