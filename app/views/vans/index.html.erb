<div class="mt-5">
  <h1>Discover our finest selection of vans !</h1>
</div>

<div class="container py-5">
  <div class="row px-3">
    <div class="col-12 justify-content-center mb-5" id="map"
      style="width: 100%; height: 400px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
  <div class="row">
    <% @vans.each do |van| %>
      <div class="col-12 col-lg-4">
        <div class="card-category mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path van.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= link_to van.description, van_path(van) %>
          <% if van.user == current_user %>
            <%= link_to "+", van_path(van), method: :delete, data: {confirm: "Are you sure"}, class: "card-remove-link" %>
          <%end%>
        </div>
      </div>
    <% end %>
  </div>
</div>
